<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_uizhi_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_product_pic" />


    <TextView
        android:id="@+id/item_uizhi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textSize="18sp"
        tools:text="title" />

    <TextView
        android:id="@+id/item_uizhi_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="This is our high-tech product. This type of product has a high performance."
        android:textColor="#aaaaaa"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/item_uizhi_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:text="2018-7-13 09:29:11" />

</LinearLayout>